@model GeoDKPOCDMPTest.Web.Models.PythagoraModel

@{
    ViewBag.Title = "Prøveopgave";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isEditor = HttpContext.Current.User.IsInRole("Brugere");
    var isProverolleA = HttpContext.Current.User.IsInRole("proverolleA");
    var isProverolleB = HttpContext.Current.User.IsInRole("proverolleB");
    HttpContext.Current.User = null;
}

    <div class="welcome nice-blue">
        Velkommen til: @ViewBag.Name A: @isProverolleA  B: @isProverolleB
    </div>
    <form method="post" id="pocForm" class="pure-form pure-form-stacked nice-blue">
        <fieldset>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-1-3">
                    <input type="number" class="pure-u-23-24" id="inputA" name="inputA" placeholder="a" />
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <input type="number" class="pure-u-23-24" id="inputB" name="inputB" placeholder="b" />
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <input type="number" class="pure-u-23-24" id="inputC" name="inputC" placeholder="c" />
                </div>
                <button id="saveDataButton" type="button" class="pure-button pure-button-primary pure-u-md-1-3" @if (!isProverolleA) { <text></text> }>gem</button>
                <select class="pure-u-1 pure-u-md-1-1" id="datasetPicker">
                    <option>Vælg et dataset til beregning</option>
                    @foreach (var set in Model.Datasets)
                    {
                        var a = set.ValueA > 0 ? set.ValueA.ToString() : "Beregn";
                        var b = set.ValueB > 0 ? set.ValueB.ToString() : "Beregn";
                        var c = set.ValueC > 0 ? set.ValueC.ToString() : "Beregn";
                        <option value="id_@set.Id">ID: @set.Id: A:@a, B:@b, C:@c</option>
                    }
                </select>
                <button id="calculateButton" type="button" class="pure-button pure-button-primary pure-u-md-1-3" @if (!isProverolleB) { <text> </text>}>beregn</button>
                <textarea id="msgBox" class="pure-u-md-1-1" rows="8">@Model.Msg </textarea>
            </div>
        </fieldset>
    </form>
