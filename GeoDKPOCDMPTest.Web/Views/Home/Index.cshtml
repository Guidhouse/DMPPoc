@model GeoDKPOCDMPTest.Web.Models.PythagoraModel

@{
    ViewBag.Title = "Prøveopgave";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isEditor = HttpContext.Current.User.IsInRole("Brugere");
    var isProverolleA = HttpContext.Current.User.IsInRole("proverolleA");
    var isProverolleB = HttpContext.Current.User.IsInRole("proverolleB");
    HttpContext.Current.User = null;
}

    <div class="welcome nice-blue">
        Velkommen til: @ViewBag.Name A: @isProverolleA  B: @isProverolleB
    </div>
    <form method="post" action="" class="pure-form pure-form-stacked nice-blue">
        <fieldset>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-md-1-3">
                    <input class="pure-u-23-24" id="inputA" name="inputA" placeholder="a" />
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <input class="pure-u-23-24" id="inputB" name="inputB" placeholder="b" />
                </div>
                <div class="pure-u-1 pure-u-md-1-3">
                    <input class="pure-u-23-24" id="inputC" name="inputC" placeholder="c" />
                </div>
                <button type="submit" class="pure-button pure-button-primary pure-u-md-1-3" @if (!isProverolleA) { <text>disabled</text>} >gem</button>
                <select class="pure-u-1 pure-u-md-1-1">
                    <option value="a">A</option>
                    <option value="a">B</option>
                    <option value="a">C</option>
                 </select>
                <button type="submit" class="pure-button pure-button-primary pure-u-md-1-3" @if (!isProverolleB) { <text>disabled</text>} >beregn</button>
                <textarea class="pure-u-md-1-1" rows="4">@Model.Msg </textarea>

            </div>

        </fieldset>

    </form>